<% include header.ejs %>

<div id="container">
    <div id="content-top">
        <h1>
            <a href="/">TODO List Pro</a>
        </h1>
    </div>
    <div id="content-middle">

    </div>
    <div id="content-right">

    </div>
    <div id="content-center">
        <h2><%= title %></h2>
        <div class="list">
            <div class="add_task">
                <a href="/add">add task</a>
            </div>
            <ol>
                <% tasks.slice().reverse().forEach(function(task){ %>
                    <li>
                        <div>
                            <form action="/delete" method="post">
                                <input type="hidden" name="_method" value="delete">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="hidden" name="_id" value="<%= task._id %>">

                                <a href="/edit/<%= task._id %>" class="task_title">
                                    <%= task.title %>
                                </a>
                                <div class="task_date">
                                    Updated Date <%= task.updated.toLocaleDateString() %>:
                                    <%= task.updated.toLocaleTimeString() %><div></div>
                                    Created Date: <%= task.created.toLocaleDateString() %>:
                                    <%= task.created.toLocaleTimeString() %>
                                    <div class="delete_button">
                                        <button type="submit" onclick="return confirm('Are you sure to delete this task?');">
                                            delete
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>
                <% }) %>
            </ol>
        </div>
    </div>
    <div id="content-left">

    </div>
    <div id="content-bottom">

    </div>
</div>
<% include footer.ejs %>
